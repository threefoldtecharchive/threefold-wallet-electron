{
  "name": "threefold-wallet",
  "productName": "ThreefoldWallet",
  "version": "0.6.2",
  "description": "A Threefold Desktop Wallet Manager.",
  "scripts": {
    "build": "concurrently \"yarn build-main\" \"yarn build-renderer\"",
    "build-dev": "concurrently \"yarn build-main-dev\" \"yarn build-renderer-dev\" \"yarn build-dll\"",
    "build-dll": "cross-env NODE_OPTIONS=--max_old_space_size=8192 NODE_ENV=development webpack --config ./configs/webpack.config.renderer.dev.dll.babel.js --colors",
    "build-e2e": "cross-env NODE_OPTIONS=--max_old_space_size=8192 E2E_BUILD=true yarn build",
    "build-main": "cross-env NODE_OPTIONS=--max_old_space_size=8192 NODE_ENV=production webpack --config ./configs/webpack.config.main.prod.babel.js --colors",
    "build-main-dev": "cross-env NODE_OPTIONS=--max_old_space_size=8192 NODE_ENV=development webpack --config ./configs/webpack.config.main.prod.babel.js --colors",
    "build-renderer": "cross-env NODE_OPTIONS=--max_old_space_size=8192 NODE_ENV=production webpack --config ./configs/webpack.config.renderer.prod.babel.js --colors",
    "build-renderer-dev": "cross-env NODE_OPTIONS=--max_old_space_size=8192 NODE_ENV=development webpack --config ./configs/webpack.config.renderer.prod.babel.js --colors",
    "build-py": "rm -rf ./app/tfchain && mkdir ./app/tfchain && python3 -m transcrypt -k -b -n -m ./src/api.py && find ./src/__target__ -name '*.js' | xargs -I '{}' ex -c ':1d' -c ':wq' {} && find ./src/__target__ | grep -E './src/__target__/.*\\.(js|py|map)$' | xargs -I '{}' mv {} ./app/tfchain && rm -rf ./src/__target__ && yarn build-tests-py",
    "build-tests-py": "python3 -m transcrypt -k -b -n -m ./src/tests.py && find ./src/__target__ -name '*.js' | xargs -I '{}' ex -c ':1d' -c ':wq' {} && find ./src/__target__ | grep -E './src/__target__/.*\\.(js|py|map)$' | xargs -I '{}' mv {} ./app/tfchain && rm -rf ./src/__target__",
    "dev": "cross-env NODE_OPTIONS=--max_old_space_size=8192 START_HOT=1 node --max-old-space-size=8192 -r @babel/register ./internals/scripts/CheckPortInUse.js && cross-env START_HOT=1 yarn start-renderer-dev",
    "flow": "flow",
    "flow-typed": "rimraf flow-typed/npm && flow-typed install --overwrite || true",
    "lint": "standard --verbose | snazzy",
    "lint-fix": "yarn --silent lint --fix; exit 0",
    "lint-styles": "stylelint --ignore-path .eslintignore '**/*.*(css|scss)' --syntax scss",
    "lint-styles-fix": "yarn --silent lint-styles --fix; exit 0",
    "package": "yarn build && electron-builder build --publish never",
    "package-dev": "yarn build-dev && electron-builder build --publish never",
    "package-all": "yarn build && electron-builder build -mwl",
    "package-all-dev": "yarn build-dev && electron-builder build -mwl",
    "package-ci": "yarn postinstall && yarn build && electron-builder --publish always",
    "package-ci-dev": "yarn postinstall && yarn build-dev && electron-builder --publish always",
    "package-linux": "yarn build && electron-builder build --linux",
    "package-linux-dev": "yarn build-dev && electron-builder build --linux",
    "package-win": "yarn build && electron-builder build --win --x64",
    "package-win-dev": "yarn build-dev && electron-builder build --win --x64",
    "postinstall": "yarn flow-typed && electron-builder install-app-deps package.json && yarn build-dll && opencollective-postinstall",
    "postlint-fix": "prettier --ignore-path .eslintignore --single-quote --write '**/*.{*{js,jsx,json},babelrc,eslintrc,prettierrc,stylelintrc}'",
    "postlint-styles-fix": "prettier --ignore-path .eslintignore --single-quote --write '**/*.{css,scss}'",
    "prestart": "yarn build",
    "start": "cross-env NODE_OPTIONS=--max_old_space_size=8192 NODE_ENV=production electron ./app/main.prod.js && yarn build-py",
    "start-main-dev": "cross-env NODE_OPTIONS=--max_old_space_size=8192 HOT=1 NODE_ENV=development electron -r @babel/register ./app/main.dev.js",
    "start-renderer-dev": "cross-env NODE_OPTIONS=--max_old_space_size=8192 NODE_ENV=development webpack-dev-server --config configs/webpack.config.renderer.dev.babel.js",
    "test": "cross-env NODE_OPTIONS=--max_old_space_size=8192 NODE_ENV=test BABEL_DISABLE_CACHE=1 jest",
    "test-all": "yarn lint && yarn flow && yarn build && yarn test && yarn build-e2e && yarn test-e2e",
    "test-e2e": "node --max-old-space-size=8192 -r @babel/register ./internals/scripts/CheckBuiltsExist.js && cross-env NODE_OPTIONS=--max_old_space_size=8192 NODE_ENV=test testcafe electron:./ ./test/e2e/HomePage.e2e.js",
    "test-e2e-live": "node --max-old-space-size=8192 -r @babel/register ./internals/scripts/CheckBuiltsExist.js && cross-env NODE_OPTIONS=--max_old_space_size=8192 NODE_ENV=test testcafe-live electron:./ ./test/e2e/HomePage.e2e.js",
    "test-watch": "yarn test --watch"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "cross-env NODE_OPTIONS=--max_old_space_size=8192 NODE_ENV=development eslint --cache --format=pretty",
      "prettier --ignore-path .eslintignore --single-quote --write",
      "git add"
    ],
    "{*.json,.{babelrc,eslintrc,prettierrc,stylelintrc}}": [
      "prettier --ignore-path .eslintignore --parser json --write",
      "git add"
    ],
    "*.{css,scss}": [
      "stylelint --ignore-path .eslintignore --syntax scss --fix",
      "prettier --ignore-path .eslintignore --single-quote --write",
      "git add"
    ],
    "*.{yml,md}": [
      "prettier --ignore-path .eslintignore --single-quote --write",
      "git add"
    ]
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "main": "./app/main.prod.js",
  "build": {
    "productName": "Threefold-Wallet",
    "appId": "org.develar.Threefold-Wallet",
    "files": [
      "app/dist/",
      "app/app.html",
      "app/main.prod.js",
      "app/main.prod.js.map",
      "app/icon.png",
      "package.json",
      "resources/**/*"
    ],
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis",
        "msi"
      ]
    },
    "linux": {
      "target": [
        "snap",
        "AppImage",
        "rpm",
        "deb"
      ],
      "category": "Development"
    },
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "publish": {
      "provider": "github",
      "owner": "tfchain-wallet-electron",
      "repo": "tfchain-wallet-electron",
      "private": false
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/threefoldfoundation/tfchain-wallet-electron.git"
  },
  "author": {
    "name": "TFT Tech",
    "email": "info@threefold.tech",
    "url": "https://threefold.io/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/threefoldfoundation/tfchain-wallet-electron/issues"
  },
  "keywords": [
    "electron",
    "boilerplate",
    "react",
    "redux",
    "flow",
    "sass",
    "webpack",
    "hot",
    "reload"
  ],
  "homepage": "https://github.com/threefoldfoundation/tfchain-wallet-electron#readme",
  "jest": {
    "testURL": "http://localhost/",
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/internals/mocks/fileMock.js",
      "\\.(css|less|sass|scss)$": "identity-obj-proxy"
    },
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "setupFiles": [
      "./internals/scripts/CheckBuiltsExist.js"
    ]
  },
